<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="right"
        android:textColor="@color/black"
        android:textSize="40pt" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AECFCACA"
        android:layout_weight="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt_AC"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#752BBD0D"
                android:onClick="numberEvent"
                android:text="AC"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <Button
                android:id="@+id/bt_bracket"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="numberEvent"
                android:text="()"
                android:textSize="25dp" />

            <Button
                android:id="@+id/bt_per"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="numberEvent"
                android:text="%"
                android:textSize="25dp" />

            <Button
                android:id="@+id/bt_div"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="numberEvent"
                android:text="/"
                android:textSize="25dp" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt_7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#E8DCDC"
                android:onClick="numberEvent"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <Button
                android:id="@+id/bt_8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#E8DCDC"
                android:onClick="numberEvent"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <Button
                android:id="@+id/bt_9"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#E8DCDC"
                android:onClick="numberEvent"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <Button
                android:id="@+id/bt_mult"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="numberEvent"
                android:text="X"
                android:textSize="25dp" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt_4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#E8DCDC"
                android:onClick="numberEvent"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <Button
                android:id="@+id/bt_5"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#E8DCDC"
                android:onClick="numberEvent"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <Button
                android:id="@+id/bt_6"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#E8DCDC"
                android:onClick="numberEvent"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <Button
                android:id="@+id/bt_sub"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="numberEvent"
                android:text="-"
                android:textSize="25dp" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt_1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="#E8DCDC"
                android:onClick="numberEvent"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <Button
                android:id="@+id/bt_2"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#E8DCDC"
                android:onClick="numberEvent"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <Button
                android:id="@+id/bt_3"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#E8DCDC"
                android:onClick="numberEvent"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <Button
                android:id="@+id/bt_add"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="numberEvent"
                android:text="+"
                android:textSize="25dp" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt_0"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#E8DCDC"
                android:onClick="numberEvent"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="25dp"

                />

            <Button
                android:id="@+id/bt_dot"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#E8DCDC"
                android:onClick="numberEvent"
                android:text="."
                android:textColor="@color/black"
                android:textSize="25dp" />

            <ImageButton
                android:id="@+id/bt_back"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#E8DCDC"
                android:onClick="numberEvent"
                android:src="@mipmap/mipmap_adaptive_fore"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <Button
                android:id="@+id/bt_equals"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="numberEvent"
                android:text="="
                android:textSize="25dp" />


        </TableRow>


    </TableLayout>

</LinearLayout>